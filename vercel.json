{
    "version": 2,
    "builds": [
        {
            "src": "public/bundle.min.js",
            "use": "@vercel/node",
            "config": {
                "includeFiles": [
                    "public/**"
                ]
            }
        }
    ],
    "rewrites": [
        {
            "source": "/(.*)",
            "destination": "public/bundle.min.js"
        }
    ]
}